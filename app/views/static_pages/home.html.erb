<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'shared/event_feed' %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">

    <h1>Make an Appointment</h1>
    <p>
      This is the home page for the WIJZER application. You can manage your consults, workshops and training for the Shiatsu Centrum Amsterdam.
    </p>

    <%= link_to "Sign up now!", login_path, class: "btn btn-lg btn-primary" %>
  </div>
  
<% end %>


